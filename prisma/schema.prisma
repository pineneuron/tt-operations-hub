generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  PLATFORM_ADMIN
  ADMIN
  FINANCE
  STAFF
  VENDOR_SUPPLIER
  CLIENT
}

enum Permission {
  USER_CREATE
  USER_READ
  USER_UPDATE
  USER_DELETE
  ROLE_MANAGE
  PERMISSION_MANAGE
}

enum EventStatus {
  SCHEDULED
  IN_PROGRESS
  CANCELLED
  COMPLETED
}

enum JobStatus {
  NOT_STARTED
  IN_PROGRESS
  IN_REVIEW
  BLOCKED
  COMPLETED
}

enum JobPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum JobUpdateType {
  STATUS
  MILESTONE
  ISSUE
  NOTE
}

enum EventParticipantRole {
  CLIENT
  COORDINATOR
  STAFF
  VENDOR
  SUPPLIER
  GUEST
}

enum EventUpdateType {
  STATUS
  MILESTONE
  ISSUE
  NOTE
}

enum EventMediaType {
  PHOTO
  VIDEO
  DOCUMENT
  OTHER
}

enum JobMediaType {
  PHOTO
  VIDEO
  DOCUMENT
  OTHER
}

enum NotificationCategory {
  EVENT
  JOB
  ATTENDANCE
  MEETING
  TRANSPORTATION
  LEAVE
  SYSTEM
}

enum NotificationChannel {
  IN_APP
  EMAIL
  PUSH
}

enum WorkLocation {
  OFFICE
  SITE
}

enum AttendanceStatus {
  ON_TIME
  LATE
  ABSENT
  HALF_DAY
  AUTO_CHECKED_OUT
}

enum AttendanceFlag {
  MISSING_LOCATION_CHECKS
  LOCATION_OUT_OF_BOUNDS
  AUTO_CHECKED_OUT
  INCOMPLETE_SESSION
}

enum LeaveType {
  ANNUAL
  SICK
  CASUAL
  PERSONAL
  EMERGENCY
  UNPAID
  MATERNITY
  PATERNITY
  COMPENSATORY
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
}

enum HalfDayType {
  FIRST_HALF
  SECOND_HALF
}

enum MeetingStatus {
  SCHEDULED
  IN_PROGRESS
  COMPLETED
  CANCELLED
  POSTPONED
}

enum MeetingType {
  CLIENT_MEETING
  INTERNAL_MEETING
  VENDOR_MEETING
  KICKOFF_MEETING
  REVIEW_MEETING
  STANDUP
  OTHER
}

enum MeetingParticipantRole {
  ORGANIZER
  ATTENDEE
}

enum MeetingNoteType {
  AGENDA
  MINUTES
  NOTE
}

enum MeetingMediaType {
  DOCUMENT
  PRESENTATION
  IMAGE
  OTHER
}

enum RecurrenceFrequency {
  DAILY
  WEEKLY
  BI_WEEKLY
  MONTHLY
}

enum TransportationStatus {
  PENDING
  CONFIRMED
  IN_TRANSIT
  COMPLETED
  CANCELLED
}

enum TransportationType {
  PICKUP
  DROPOFF
  ROUND_TRIP
  DELIVERY
}

enum DeliveryStatus {
  PENDING
  IN_TRANSIT
  DELIVERED
  FAILED
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  username      String?   @unique
  name          String?
  passwordHash  String?
  emailVerified DateTime?
  image         String?
  rememberMe    Boolean   @default(false)
  role          UserRole  @default(STAFF)
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts                      Account[]
  sessions                      Session[]
  otpTokens                     OtpToken[]
  passwordResetTokens           PasswordResetToken[]
  rolePermissions               RolePermission[]
  eventsAsClient                Event[]                 @relation("ClientEvents")
  eventParticipants             EventParticipant[]
  eventUpdates                  EventUpdate[]
  eventReports                  EventReport[]
  eventMediaUploads             EventMedia[]
  jobAssignments                JobAssignment[]
  jobsCreated                   Job[]                   @relation("JobsCreated")
  jobsUpdated                   Job[]                   @relation("JobsUpdated")
  jobUpdates                    JobUpdate[]
  jobMediaUploads               JobMedia[]
  notificationsCreated          Notification[]          @relation("NotificationsCreated")
  notificationReceipts          NotificationReceipt[]
  attendanceSessions            AttendanceSession[]
  leaveRequests                 LeaveRequest[]
  leaveBalances                 LeaveBalance[]
  leaveApprovals                LeaveRequest[]          @relation("LeaveApprovals")
  fcmTokens                     FcmToken[]
  meetingsOrganized             Meeting[]               @relation("MeetingOrganizer")
  meetingParticipants           MeetingParticipant[]
  meetingNotes                  MeetingNote[]
  meetingMediaUploads           MeetingMedia[]
  meetingReminders              MeetingReminder[]
  transportationBookingsCreated TransportationBooking[] @relation("TransportationBookingsCreated")
  transportationBookingsUpdated TransportationBooking[] @relation("TransportationBookingsUpdated")
  transportationVendorSupplier  TransportationBooking[] @relation("TransportationVendorSupplier")
  transportationEntriesCreated  TransportationEntry[]   @relation("TransportationEntriesCreated")
  transportationEntriesUpdated  TransportationEntry[]   @relation("TransportationEntriesUpdated")

  @@map("users")
}

model Event {
  id               String      @id @default(cuid())
  title            String
  description      String?
  clientId         String
  venue            String?
  featuredImageUrl String?
  startDate        DateTime
  endDate          DateTime
  status           EventStatus @default(SCHEDULED)
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt

  client       User               @relation("ClientEvents", fields: [clientId], references: [id], onDelete: Cascade)
  jobs         Job[]
  participants EventParticipant[]
  updates      EventUpdate[]
  reports      EventReport[]
  media        EventMedia[]

  @@index([clientId])
  @@map("events")
}

model EventParticipant {
  id        String               @id @default(cuid())
  eventId   String
  userId    String
  role      EventParticipantRole
  invitedBy String?
  createdAt DateTime             @default(now())

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([eventId, userId])
  @@index([userId])
  @@map("event_participants")
}

model EventUpdate {
  id          String          @id @default(cuid())
  eventId     String
  createdById String
  type        EventUpdateType @default(STATUS)
  status      EventStatus?
  message     String
  metadata    Json?
  createdAt   DateTime        @default(now())

  event     Event        @relation(fields: [eventId], references: [id], onDelete: Cascade)
  createdBy User         @relation(fields: [createdById], references: [id], onDelete: Cascade)
  media     EventMedia[] @relation("UpdateMedia")

  @@index([eventId])
  @@index([createdById])
  @@map("event_updates")
}

model EventReport {
  id            String   @id @default(cuid())
  eventId       String
  submittedById String
  summary       String
  issues        String?
  notes         String?
  createdAt     DateTime @default(now())

  event       Event        @relation(fields: [eventId], references: [id], onDelete: Cascade)
  submittedBy User         @relation(fields: [submittedById], references: [id], onDelete: Cascade)
  attachments EventMedia[] @relation("ReportMedia")

  @@index([eventId])
  @@index([submittedById])
  @@map("event_reports")
}

model EventMedia {
  id           String         @id @default(cuid())
  eventId      String
  updateId     String? // Link to EventUpdate (for updates with images)
  reportId     String?
  uploadedById String
  type         EventMediaType @default(PHOTO)
  url          String
  description  String?
  size         Int?
  createdAt    DateTime       @default(now())

  event      Event        @relation(fields: [eventId], references: [id], onDelete: Cascade)
  update     EventUpdate? @relation("UpdateMedia", fields: [updateId], references: [id], onDelete: Cascade)
  report     EventReport? @relation("ReportMedia", fields: [reportId], references: [id], onDelete: Cascade)
  uploadedBy User         @relation(fields: [uploadedById], references: [id], onDelete: Cascade)

  @@index([eventId])
  @@index([updateId])
  @@index([uploadedById])
  @@map("event_media")
}

model Notification {
  id          String                @id @default(cuid())
  category    NotificationCategory  @default(SYSTEM)
  title       String
  body        String?
  entityType  NotificationCategory?
  entityId    String?
  data        Json?
  createdById String?
  createdAt   DateTime              @default(now())

  createdBy User?                 @relation("NotificationsCreated", fields: [createdById], references: [id], onDelete: SetNull)
  receipts  NotificationReceipt[]

  @@index([category])
  @@index([createdAt])
  @@map("notifications")
}

model NotificationReceipt {
  id             String              @id @default(cuid())
  notificationId String
  userId         String
  channel        NotificationChannel @default(IN_APP)
  deliveredAt    DateTime?
  seenAt         DateTime?
  createdAt      DateTime            @default(now())

  notification Notification @relation(fields: [notificationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([notificationId, userId, channel])
  @@index([userId, seenAt])
  @@map("notification_receipts")
}

model Job {
  id          String       @id @default(cuid())
  title       String
  remarks     String?
  status      JobStatus    @default(NOT_STARTED)
  priority    JobPriority?
  dueDate     DateTime?
  completedAt DateTime?
  eventId     String?
  createdById String
  updatedById String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  event     Event?          @relation(fields: [eventId], references: [id], onDelete: SetNull)
  createdBy User            @relation("JobsCreated", fields: [createdById], references: [id])
  updatedBy User            @relation("JobsUpdated", fields: [updatedById], references: [id])
  assignees JobAssignment[]
  updates   JobUpdate[]
  media     JobMedia[]

  @@index([eventId])
  @@index([status])
  @@index([priority])
  @@map("jobs")
}

model JobAssignment {
  id         String   @id @default(cuid())
  jobId      String
  userId     String
  role       String?
  assignedAt DateTime @default(now())

  job  Job  @relation(fields: [jobId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([jobId, userId])
  @@index([userId])
  @@map("job_assignments")
}

model JobUpdate {
  id          String        @id @default(cuid())
  jobId       String
  createdById String
  type        JobUpdateType @default(NOTE)
  status      JobStatus?
  message     String
  metadata    Json?
  createdAt   DateTime      @default(now())

  job       Job        @relation(fields: [jobId], references: [id], onDelete: Cascade)
  createdBy User       @relation(fields: [createdById], references: [id], onDelete: Cascade)
  media     JobMedia[] @relation("UpdateMedia")

  @@index([jobId])
  @@index([createdById])
  @@map("job_updates")
}

model JobMedia {
  id           String       @id @default(cuid())
  jobId        String
  updateId     String? // Link to JobUpdate (for updates with images)
  uploadedById String
  type         JobMediaType @default(PHOTO)
  url          String
  description  String?
  size         Int?
  createdAt    DateTime     @default(now())

  job        Job        @relation(fields: [jobId], references: [id], onDelete: Cascade)
  update     JobUpdate? @relation("UpdateMedia", fields: [updateId], references: [id], onDelete: Cascade)
  uploadedBy User       @relation(fields: [uploadedById], references: [id], onDelete: Cascade)

  @@index([jobId])
  @@index([updateId])
  @@index([uploadedById])
  @@map("job_media")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model OtpToken {
  id        String   @id @default(cuid())
  userId    String
  token     String
  expires   DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, token])
  @@map("otp_tokens")
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expires   DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, token])
  @@map("password_reset_tokens")
}

model RolePermission {
  id         String     @id @default(cuid())
  userId     String
  permission Permission
  createdAt  DateTime   @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, permission])
  @@map("role_permissions")
}

model AttendanceSession {
  id           String           @id @default(cuid())
  userId       String
  date         DateTime // Date of attendance (date only)
  workLocation WorkLocation // OFFICE or SITE
  status       AttendanceStatus @default(ON_TIME)
  flags        AttendanceFlag[] // Array of flags

  // Check-in details
  checkInTime            DateTime // When user checked in (UTC)
  expectedCheckInTime    DateTime? // Expected check-in time (10 AM Kathmandu = 4:15 AM UTC)
  isLate                 Boolean   @default(false)
  lateMinutes            Int? // Minutes late (if late)
  lateReason             String?   @db.Text // Required if late (textarea)
  checkInLocationLat     Float? // Latitude at check-in
  checkInLocationLng     Float? // Longitude at check-in
  checkInLocationAddress String? // Address at check-in

  // Check-out details
  checkOutTime            DateTime? // When user checked out (UTC, nullable)
  expectedCheckOutTime    DateTime? // Expected check-out time (6 PM Kathmandu = 12:15 PM UTC)
  checkOutLocationLat     Float? // Latitude at check-out
  checkOutLocationLng     Float? // Longitude at check-out
  checkOutLocationAddress String? // Address at check-out

  // Calculated fields
  totalHours     Float? // Calculated hours worked
  autoCheckedOut Boolean @default(false) // Whether auto-checked out at end of day

  // Notes and remarks
  checkInNotes  String? @db.Text // User notes at check-in
  checkOutNotes String? @db.Text // User notes at check-out
  managerNotes  String? @db.Text // Manager/admin notes

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user           User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  locationChecks AttendanceLocation[] // Location checks every 5 minutes

  @@index([userId])
  @@index([date])
  @@index([userId, date])
  @@index([userId, checkInTime])
  @@index([status])
  @@index([isLate])
  @@map("attendance_sessions")
}

model AttendanceLocation {
  id        String   @id @default(cuid())
  sessionId String
  timestamp DateTime // When location was recorded (UTC)
  latitude  Float // Required - location must be shared
  longitude Float // Required - location must be shared
  address   String? // Optional reverse geocoded address
  accuracy  Float? // GPS accuracy in meters
  createdAt DateTime @default(now())

  session AttendanceSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
  @@index([sessionId, timestamp])
  @@index([timestamp])
  @@map("attendance_locations")
}

model LeaveRequest {
  id        String      @id @default(cuid())
  userId    String // Employee requesting leave
  leaveType LeaveType // Type of leave
  status    LeaveStatus @default(PENDING)

  // Date range
  startDate   DateTime // Start date of leave
  endDate     DateTime // End date of leave
  isHalfDay   Boolean      @default(false) // Half day leave
  halfDayType HalfDayType? // "FIRST_HALF" or "SECOND_HALF" if half day

  // Details
  reason String  @db.Text // Reason for leave
  notes  String? @db.Text // Additional notes

  // Approval workflow
  approvedById    String? // Who approved/rejected (ADMIN, PLATFORM_ADMIN, or FINANCE)
  approvedAt      DateTime? // When approved/rejected
  rejectionReason String?   @db.Text // Reason if rejected

  // Tracking
  totalDays Float // Calculated total days (0.5 for half day, excluding weekends and holidays)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  approvedBy  User?             @relation("LeaveApprovals", fields: [approvedById], references: [id], onDelete: SetNull)
  attachments LeaveAttachment[]

  @@index([userId])
  @@index([status])
  @@index([startDate, endDate])
  @@index([userId, startDate])
  @@index([userId, status])
  @@map("leave_requests")
}

model LeaveAttachment {
  id             String   @id @default(cuid())
  leaveRequestId String
  fileName       String // Original file name
  fileUrl        String // URL or path to the file
  fileType       String? // MIME type
  fileSize       Int? // File size in bytes
  description    String? // Optional description
  uploadedAt     DateTime @default(now())

  leaveRequest LeaveRequest @relation(fields: [leaveRequestId], references: [id], onDelete: Cascade)

  @@index([leaveRequestId])
  @@map("leave_attachments")
}

model LeaveBalance {
  id        String    @id @default(cuid())
  userId    String
  year      Int // Year (e.g., 2024, 2025)
  leaveType LeaveType

  // Balance tracking
  totalAllocated Float @default(0) // Total days allocated for the year
  totalUsed      Float @default(0) // Total days used (approved leaves)
  totalPending   Float @default(0) // Total days in pending requests
  balance        Float // Calculated: totalAllocated - totalUsed - totalPending

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, year, leaveType])
  @@index([userId, year])
  @@map("leave_balances")
}

model NepaliHoliday {
  id          String   @id @default(cuid())
  category    String // Category/name of holiday (e.g., "Shivratri", "Dashain", "Tihar")
  nameNepali  String? // Holiday name in Nepali
  date        DateTime // Date of holiday (date only)
  year        Int // Year for indexing
  isRecurring Boolean  @default(false) // If true, applies every year
  description String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([category, date, year])
  @@index([date])
  @@index([year])
  @@index([category, year])
  @@map("nepali_holidays")
}

model FcmToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique // FCM registration token
  deviceId  String? // Optional device identifier
  userAgent String? // Browser/device user agent
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@map("fcm_tokens")
}

model Meeting {
  id          String        @id @default(cuid())
  title       String
  description String?       @db.Text
  agenda      String?       @db.Text
  startTime   DateTime
  endTime     DateTime
  location    String? // Physical location or "Virtual"
  meetingLink String? // Video call link (Zoom, Teams, etc.)
  status      MeetingStatus @default(SCHEDULED)
  type        MeetingType   @default(INTERNAL_MEETING)
  organizerId String
  isRecurring Boolean       @default(false)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  organizer    User                 @relation("MeetingOrganizer", fields: [organizerId], references: [id], onDelete: Cascade)
  participants MeetingParticipant[]
  notes        MeetingNote[]
  media        MeetingMedia[]
  recurrence   MeetingRecurrence?
  reminders    MeetingReminder[]

  @@index([organizerId])
  @@index([startTime])
  @@index([status])
  @@index([type])
  @@map("meetings")
}

model MeetingParticipant {
  id        String                 @id @default(cuid())
  meetingId String
  userId    String
  role      MeetingParticipantRole @default(ATTENDEE)
  invitedBy String?
  createdAt DateTime               @default(now())

  meeting Meeting @relation(fields: [meetingId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([meetingId, userId])
  @@index([userId])
  @@index([meetingId])
  @@map("meeting_participants")
}

model MeetingNote {
  id          String          @id @default(cuid())
  meetingId   String
  createdById String
  type        MeetingNoteType @default(NOTE)
  content     String          @db.Text
  metadata    Json?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  meeting   Meeting        @relation(fields: [meetingId], references: [id], onDelete: Cascade)
  createdBy User           @relation(fields: [createdById], references: [id], onDelete: Cascade)
  media     MeetingMedia[] @relation("NoteMedia")

  @@index([meetingId])
  @@index([createdById])
  @@map("meeting_notes")
}

model MeetingMedia {
  id           String           @id @default(cuid())
  meetingId    String
  noteId       String? // Link to MeetingNote (for notes with attachments)
  uploadedById String
  type         MeetingMediaType @default(DOCUMENT)
  url          String
  description  String?
  size         Int?
  createdAt    DateTime         @default(now())

  meeting    Meeting      @relation(fields: [meetingId], references: [id], onDelete: Cascade)
  note       MeetingNote? @relation("NoteMedia", fields: [noteId], references: [id], onDelete: Cascade)
  uploadedBy User         @relation(fields: [uploadedById], references: [id], onDelete: Cascade)

  @@index([meetingId])
  @@index([noteId])
  @@index([uploadedById])
  @@map("meeting_media")
}

model MeetingRecurrence {
  id          String              @id @default(cuid())
  meetingId   String              @unique
  frequency   RecurrenceFrequency
  interval    Int                 @default(1) // Every N days/weeks/months
  endDate     DateTime? // End date for recurrence
  occurrences Int? // Number of occurrences (alternative to endDate)
  daysOfWeek  Int[] // For weekly: [1,3,5] = Mon, Wed, Fri (0=Sunday, 6=Saturday), empty array if not applicable
  dayOfMonth  Int? // For monthly: day of month (1-31)
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  meeting Meeting @relation(fields: [meetingId], references: [id], onDelete: Cascade)

  @@index([meetingId])
  @@map("meeting_recurrences")
}

model MeetingReminder {
  id              String   @id @default(cuid())
  meetingId       String
  userId          String
  reminderMinutes Int[] // Array of minutes before meeting (e.g., [15, 60, 1440] = 15min, 1hr, 1day)
  createdAt       DateTime @default(now())

  meeting Meeting @relation(fields: [meetingId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([meetingId, userId])
  @@index([meetingId])
  @@index([userId])
  @@map("meeting_reminders")
}

model TransportationBooking {
  id          String               @id @default(cuid())
  title       String // Brief description of the booking
  description String?              @db.Text // Detailed requirements
  type        TransportationType
  status      TransportationStatus @default(PENDING)

  // Pickup details
  pickupLocation     String
  pickupDate         DateTime
  pickupTime         DateTime?
  pickupContactName  String?
  pickupContactPhone String?

  // Dropoff details
  dropoffLocation     String
  dropoffDate         DateTime?
  dropoffTime         DateTime?
  dropoffContactName  String?
  dropoffContactPhone String?

  // Assignment
  vendorSupplierId String? // Selected Vendor/Supplier (VENDOR_SUPPLIER role)
  createdById      String // Staff who created the booking
  updatedById      String

  // Metadata
  metadata  Json? // Additional flexible data
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  vendorSupplier User?                @relation("TransportationVendorSupplier", fields: [vendorSupplierId], references: [id], onDelete: SetNull)
  createdBy      User                 @relation("TransportationBookingsCreated", fields: [createdById], references: [id])
  updatedBy      User                 @relation("TransportationBookingsUpdated", fields: [updatedById], references: [id])
  entry          TransportationEntry? // One-to-one relationship

  @@index([status])
  @@index([type])
  @@index([vendorSupplierId])
  @@index([createdById])
  @@index([pickupDate])
  @@map("transportation_bookings")
}

model TransportationEntry {
  id             String             @id @default(cuid())
  bookingId      String?            @unique // Optional link to booking (can be standalone)
  type           TransportationType
  deliveryStatus DeliveryStatus? // For delivery type entries

  // Vehicle details
  vehicleNumber String
  driverName    String
  driverPhone   String?

  // Actual trip details
  actualPickupLocation String
  actualPickupDate     DateTime
  actualPickupTime     DateTime?

  actualDropoffLocation String
  actualDropoffDate     DateTime?
  actualDropoffTime     DateTime?

  // Additional details
  notes    String? @db.Text
  metadata Json? // Additional flexible data

  // Tracking
  createdById String // Vendor/Supplier or Staff/Admin who created
  updatedById String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  booking   TransportationBooking? @relation(fields: [bookingId], references: [id], onDelete: SetNull)
  createdBy User                   @relation("TransportationEntriesCreated", fields: [createdById], references: [id])
  updatedBy User                   @relation("TransportationEntriesUpdated", fields: [updatedById], references: [id])

  @@index([bookingId])
  @@index([type])
  @@index([deliveryStatus])
  @@index([createdById])
  @@index([actualPickupDate])
  @@map("transportation_entries")
}
